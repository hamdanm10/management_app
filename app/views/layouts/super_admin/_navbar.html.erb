<%= render(Ui::NavbarComponent.new) do %>
  <div class="flex items-center gap-2">
    <%= render(Ui::ButtonComponent.new(type: "button", size: "sm", variant: "light", "data-drawer-target": "super-admin-sidebar", "data-drawer-toggle": "super-admin-sidebar", "aria-controls": "super-admin-sidebar", class: "lg:hidden block")) do %>
      <span class="sr-only">Open sidebar</span>
      <%= lucide_icon("panel-right-close", "stroke-width": "1.5") %>
    <% end %>
    <%= render(Ui::ButtonComponent.new(type: "button", size: "sm", variant: "light", class: "flex gap-2 items-center")) do %>
      <%= lucide_icon("search", "stroke-width": "1.5", "class": "text-gray-500") %>
      <span class="ms-1 pe-20 text-gray-500 font-normal hidden lg:block">Search or type command...</span>
      <div class="text-sm hidden lg:flex items-center">
        <%= lucide_icon('command', 'stroke-width': '1.5', 'width': '18', 'height': '18', 'class': 'text-gray-500') %>
        <span class="text-gray-500 font-normal">K</span>
      </div>
    <% end %>
  </div>
  <div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
    <button type="button" class="flex items-center text-sm gap-2 hover:cursor-pointer" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
      <span class="sr-only">Open user menu</span>
      <%= image_tag "avatar.jpg", class: "w-10 h-10 rounded-full border border-gray-300", alt: "user photo" %>
      <span class="hidden lg:block truncate max-w-[15ch]"><%= current_user.first_name.titleize %></span>
      <%= lucide_icon("chevron-down", "stroke-width": "1.5", "width": "18", "height": "18", class: "hidden lg:block") %>
    </button>
    <!-- Dropdown menu -->
    <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-300 rounded-lg shadow-sm w-sm border border-gray-300" id="user-dropdown">
      <div class="px-4 py-3">
        <span class="block text-sm text-gray-700 truncate max-w-[30ch]">
          <%= current_user.full_name.titleize %>
        </span>
        <span class="block text-sm text-gray-500 truncate max-w-[30ch]">
          <%= current_user.email_address %>
        </span>
      </div>
      <ul class="py-2" aria-labelledby="user-menu-button">
        <li>
          <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Edit Profile</a>
        </li>
        <li>
          <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Account Settings</a>
        </li>
        <li>
          <%= button_to "Sign Out", session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 w-full text-left hover:cursor-pointer" %>
        </li>
      </ul>
    </div>
  </div>
<% end %>