<tr class="bg-white last:border-b-0 hover:bg-gray-50 border-b border-b-gray-300">
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <%= pagy.offset + index + 1 %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <%= sale.sales_channel.name %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <%= sale.product.name %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <%= sale.quantity %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <div class="flex flex-col gap-2">
      <div>
        <span class="text-gray-700">Sold -</span>
        <span class="font-semibold text-success-500"><%= sale.sales_report.sold_quantity %></span>
      </div>
      <div>
        <span class="text-gray-700">Unsold -</span>
        <span class="font-semibold text-warning-500"><%= sale.sales_report.unsold_quantity %></span>
      </div>
      <div>
        <span class="text-gray-700">Waste -</span>
        <span class="font-semibold text-danger-500"><%= sale.sales_report.waste_quantity %></span>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <div class="flex flex-col gap-2">
      <div>
        <span class="text-gray-700">Revenue -</span>
        <span class="font-semibold text-warning-500"><%= format_price(sale.sales_report.total_revenue) %></span>
      </div>
      <div>
        <span class="text-gray-700">Profit -</span>
        <span class="font-semibold text-success-500"><%= format_price(sale.sales_report.total_profit) %></span>
      </div>
      <div>
        <span class="text-gray-700">Loss -</span>
        <span class="font-semibold text-danger-500"><%= format_price(sale.sales_report.total_loss) %></span>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <%= sale.note %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <div class="flex">
      <%= render(Ui::ButtonLinkComponent.new(size: "sm", variant: "light", url: super_admin_sales_entry_sale_sales_report_path(sales_entry, sale, sale.sales_report.id), class: "flex gap-2 items-center")) do %>
        <%= lucide_icon("notepad-text", class: "size-5") %>
        <span>Report</span>
      <% end %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap font-normal text-gray-700">
    <div class="flex gap-2 items-center">
      <%= render(DialogComponent.new) do |dialog| %>
        <%= dialog.trigger do %>
          <button type="button" class="flex text-secondary-700 hover:text-secondary-900 cursor-pointer" data-action="dialog#open">
            <%= lucide_icon("trash-2", class: "size-5") %>
          </button>
        <% end %>
        <%= dialog.header do %>
          <p class="text-sm text-gray-700">Are you sure?</p>
        <% end %>
        <%= dialog.body do %>
          <span class="text-gray-700">
            Are you sure you want to delete this sale
            <span class="font-semibold">
              "<%= sale.sales_channel.name %>"
            </span>?
          </span>
        <% end %>
        <%= dialog.footer do %>
          <%= render(Ui::ButtonComponent.new(type: "button", size: "sm", variant: "light", data: { action: "dialog#close" }).with_content("Cancel")) %>
          <%= button_to "Delete", super_admin_sales_entry_sale_path(sales_entry, sale), method: :delete, class: "focus:ring-4 font-medium rounded-full focus:outline-none cursor-pointer text-white bg-danger-500 hover:bg-danger-700 focus:ring-danger-300 px-3 py-2 text-sm" %>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>