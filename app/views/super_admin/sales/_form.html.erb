<%= form_with model: sale, 
    url: url,
    data: {
      controller: "choices-select",
    },
    class: "mt-5 flex flex-col gap-5" do |form| %>
  <div class="block bg-white border border-gray-300 rounded-lg divide-y divide-gray-300">
    <div class="p-4 lg:p-6">
      <h3 class="font-medium text-gray-700">Sale</h3>
      <p class="text-sm text-gray-500"><%= form_instruction("sale", sale) %></p>
    </div>
    <div class="p-4 lg:p-6 flex flex-col gap-3">
      <div>
        <%= render(Ui::LabelInputComponent.new(form: form, field_name: :sales_channel_id, label: "Sales Channel", required: true)) %>
        <div class="mt-2">
          <%= render(Ui::ChoicesSelectInputComponent.new(form: form, field_name: :sales_channel_id, records: sales_channels_for_select, current_value: sale.sales_channel_id, prompt: "Choose sales channel")) %>
        </div>
        <%= render(ErrorInputComponent.new(model: sale, field_name: :sales_channel_id)) %>
      </div>
      <div>
        <%= render(Ui::LabelInputComponent.new(form: form, field_name: :product_id, label: "Product", required: true)) %>
        <div class="mt-2">
          <%= render(Ui::ChoicesSelectInputComponent.new(form: form, field_name: :product_id, records: products_for_select, current_value: sale.product_id, prompt: "Choose product")) %>
        </div>
        <%= render(ErrorInputComponent.new(model: sale, field_name: :product_id)) %>
      </div>
      <div>
        <%= render(Ui::LabelInputComponent.new(form: form, field_name: :quantity, label: "Quantity", required: true)) %>
        <%= render(Ui::NumberInputComponent.new(form: form, field_name: :quantity, class: "mt-2")) %>
        <%= render(ErrorInputComponent.new(model: sale, field_name: :quantity)) %>
      </div>
      <div>
        <%= render(Ui::LabelInputComponent.new(form: form, field_name: :note, label: "Note")) %>
        <%= render(Ui::TextAreaInputComponent.new(form: form, field_name: :note, class: "mt-2")) %>
        <%= render(ErrorInputComponent.new(model: sale, field_name: :note)) %>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end">
    <%= render(Ui::ButtonComponent.new(type: "submit", size: "md", variant: "primary", class: "flex items-center gap-2")) do %>
      <%= lucide_icon("save", class: "size-5") %>
      <span>Save</span>
    <% end %>
  </div>
<% end %>