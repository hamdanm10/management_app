<div class="mt-5 flex flex-col gap-5">
  <div class="block bg-white border border-gray-300 rounded-lg divide-y divide-gray-300">
    <div class="p-4 lg:p-6">
      <h3 class="font-medium text-gray-700">Expense Item Details</h3>
      <p class="text-sm text-gray-500">Below are the details of the expense item.</p>
    </div>
    <div class="px-4 lg:px-6 text-gray-700 flex flex-col text-sm">
      <div class="flex gap-2 pt-4 pb-2">
        <div class="w-2/12">
          <span class="font-medium">Item Name</span>
        </div>
        <div class="w-10/12">
          <span><%= expense_item.name %></span>
        </div>
      </div>
      <div class="flex gap-2 pt-2 pb-2">
        <div class="w-2/12">
          <span class="font-medium">Unit Price</span>
        </div>
        <div class="w-10/12">
          <span><%= format_price(expense_item.unit_price) %></span>
        </div>
      </div>
      <div class="flex gap-2 pt-2 pb-2">
        <div class="w-2/12">
          <span class="font-medium">Quantity</span>
        </div>
        <div class="w-10/12">
          <span>
            <%= "#{expense_item.quantity} #{expense_item.unit_type.name.titleize}" %>
          </span>
        </div>
      </div>
      <div class="flex gap-2 pt-2 pb-2">
        <div class="w-2/12">
          <span class="font-medium">Total Price</span>
        </div>
        <div class="w-10/12">
          <span><%= format_price(expense_item.total_price) %></span>
        </div>
      </div>
      <div class="flex gap-2 pt-2 pb-4">
        <div class="w-2/12">
          <span class="font-medium">Note</span>
        </div>
        <div class="w-10/12">
          <span><%= expense_item.note %></span>
        </div>
      </div>
    </div>
  </div>
</div>