<div class="flex items-center justify-between">
  <div class="flex gap-4 items-center">
    <%= render(Ui::ButtonLinkComponent.new(size: "sm", variant: "light", url: super_admin_sales_entry_sale_sales_report_path(@sales_entry, @sale))) do %>
      <%= lucide_icon("chevron-left", class: "size-5") %>
    <% end %>
    <h2 class="text-xl font-bold text-gray-700">
      <%= "#{@sales_entry.sale_code} - Edit Sales Report" %>
    </h2>
  </div>
  <div class="hidden lg:block">
    <%= render(Ui::BreadcrumbComponent.new) do %>
      <%= render(Ui::BreadcrumbItemComponent.new(url: super_admin_dashboard_path, icon: "layout-grid", name: "Dashboard")) %>
      <%= render(Ui::BreadcrumbItemComponent.new(url: super_admin_sales_entries_path, name: "Sales Entries")) %>
      <%= render(Ui::BreadcrumbItemComponent.new(url: super_admin_sales_entry_sales_path(@sales_entry), name: "Sales")) %>
      <%= render(Ui::BreadcrumbItemComponent.new(url: super_admin_sales_entry_sale_sales_report_path(@sales_entry, @sale), name: "Sales Report")) %>
      <%= render(Ui::BreadcrumbItemComponent.new(name: "Edit Sales Report", last: true)) %>
    <% end %>
  </div>
</div>
<%= render "form", url: super_admin_sales_entry_sale_sales_report_path(@sales_entry, @sale, @sales_report), sale: @sale, sales_report: @sales_report %>
