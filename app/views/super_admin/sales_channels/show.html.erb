  <div class="flex gap-4 items-center">
    <%= render(Ui::ButtonLinkComponent.new(size: "sm", variant: "light", url: super_admin_sales_channels_path)) do %>
      <%= lucide_icon("chevron-left", class: "size-5") %>
    <% end %>
    <h2 class="text-xl font-bold text-gray-700">Detail Sales Channel</h2>
  </div>
  <div class="hidden lg:block">
