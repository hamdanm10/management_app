<% if !last %>
  <a href="<%= url %>" class="flex items-center text-gray-400 hover:text-gray-700">
    <% if icon %>
      <span class="me-2">
        <%= lucide_icon(icon, "stroke-width": "1.5", "width": "18", "height": "18") %>
      </span>
    <% end %>
    <%= name %>
  </a>
  <%= lucide_icon("chevron-right", "stroke-width": "1.5", "width": "18", "height": "18", "class": "text-gray-400") %>
<% else %>
  <span class="text-gray-700"><%= name %></span>
<% end %>